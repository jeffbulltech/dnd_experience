{
    "name": "dnd-experience-root",
    "version": "1.0.0",
    "description": "Root package for Dungeons & Dragons AI Game Master",
    "scripts": {
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "./.venv/bin/uvicorn backend.app.main:app --reload",
        "dev": "concurrently -n \"frontend,backend\" -c \"blue,green\" \"npm run dev:frontend\" \"npm run dev:backend\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}